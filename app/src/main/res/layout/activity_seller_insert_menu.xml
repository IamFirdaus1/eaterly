<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerInsertMenu">

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="1.5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_top_bar" />

    <LinearLayout
        android:id="@+id/ll_top_bar"
        style="@style/TopBar"
        android:layout_width="412dp"
        android:layout_height="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            style="@style/BackButton"
            android:layout_width="51dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/SettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Add Menu"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/interbold"
                android:text="Food Category"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_top_bar" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/menuDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="580dp"
        android:fontFamily="@font/interextrabold"
        android:text="Menu Details"
        android:textColor="@color/green"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        app:layout_constraintVertical_bias="0.288" />

<!--    <androidx.cardview.widget.CardView-->
<!--        android:id="@+id/cardView"-->
<!--        android:layout_width="450dp"-->
<!--        android:layout_height="558dp"-->
<!--        android:layout_marginHorizontal="8dp"-->
<!--        app:cardElevation="8dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintHorizontal_bias="0.516"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintVertical_bias="0.638">-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="390dp"
        android:layout_height="538dp"
        app:cardElevation="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62">

        <TextView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="2dp"
            android:fontFamily="@font/interbold"
            android:shadowColor="#4CAE50"
            android:text="Photo"
            android:textColor="#4CAE50" />

        <TextView
            android:id="@+id/photoDesc"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="25dp"
            android:text="Upload appetizing photos so that customers are more interested."
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/btn_insert"
            android:layout_width="127dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="125px"
            android:scaleType="center"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="155dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/interbold"
            android:text="Name*"
            android:textColor="#4CAD50" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="363dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="175dp"
            android:ems="10"
            android:hint="E.g. Ciken Katsoo"
            android:inputType="text" />

        <TextView
            android:id="@+id/description"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="245dp"
            android:fontFamily="@font/interbold"
            android:text="Description"
            android:textColor="#4CAD50" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="363dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="265dp"
            android:ems="10"
            android:hint="E.g. Behold the Ciken Katsoo, dish of noble..."
            android:inputType="text" />

        <TextView
            android:id="@+id/price"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="335dp"
            android:fontFamily="@font/interbold"
            android:text="Price*"
            android:textColor="#4CAD50" />

        <TextView
            android:id="@+id/timeEstimation"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="425dp"
            android:fontFamily="@font/interbold"
            android:text="Time Estimation"
            android:textColor="#4CAD50" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="363dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="355dp"
            android:ems="10"
            android:hint="Rp. 25,000"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTimeEstimation"
            android:layout_width="363dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="455dp"
            android:ems="10"
            android:hint="15 minutes"
            android:inputType="number" />

    </androidx.cardview.widget.CardView>

    <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="0.379" />


    </androidx.constraintlayout.widget.ConstraintLayout>